<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.service.eventus.mappers.MemberDao">
    <!-- 아이디 중복 체크 -->
    <select id="idChk" resultType="Integer">
        select count(*) from staff_table
        where staff_id = #{staff_id}
    </select>

    <!-- 로그인할때 회원정보 가져올때 -->
    <select id="viewMember" parameterType="hashMap" resultType="com.service.eventus.member.MemberVo">
        select * from staff_table
        where staff_id = #{staff_id} and staff_pw = #{staff_pw}
    </select>

    <select id="loginCheck" parameterType="hashMap" resultType="Integer">
        select count(*) from staff_table
        where staff_id = #{staff_id} and staff_pw=#{staff_pw}
    </select>
</mapper>